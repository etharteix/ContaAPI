@model ContaAPI.WebMVC.ViewModel.Register
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>


<div>
  @using (Html.BeginForm("SaveRegisterDetails", "Account"))
  {
    <div style="color:red;">@Html.ValidationSummary()</div>
    <div class="row">
      <!--Show details are saved successfully message-->
      <div class="col-lg-12" style="white-space: pre-line">@ViewBag.Message</div>
    </div><br />
    <div class="row">
      <div class="col-lg-2">@Html.LabelFor(a => a.Name)</div>
      <div class="col-lg-10">@Html.TextBoxFor(a => a.Name, new { @class = "form-control" })</div>
    </div><br />
    <div class="row">
      <div class="col-lg-2">@Html.LabelFor(a => a.Email)</div>
      <div class="col-lg-10">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
    </div><br />
    <div class="row">
      <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
      <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })</div>
    </div><br />
    <div class="row">
      <input type="submit" value="Register" class="btn btn-primary" />
    </div><br />
  }
</div>

<div class="row">
  <button onclick="location.href='@Url.Action("Login", "Account")'" class="btn btn-primary">Cancel</button>
</div>